{{ header }}
<div id="product-search" class="container">
  <div class="row">{{ column_left }}
    <div id="content" class="col">
      
      <!-- Breadcrumbs -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ol>
      </nav>
      
      <!-- Page Header -->
      <div class="text-center mb-5">
        <h1 class="display-4">{{ heading_title }}</h1>
        <p class="lead">{{ text_description }}</p>
        <div class="alert alert-info">
          <i class="fa fa-info-circle"></i>
          {{ text_instructions }}
        </div>
      </div>

      <!-- Demo Statistics -->
      <div class="row mb-5">
        <div class="col-12">
          <h3 class="text-center mb-4">{{ text_demo_stats }}</h3>
          <div class="row">
            {% for stat in demo_stats %}
            <div class="col-md-3 col-sm-6 mb-3">
              <div class="card text-center h-100">
                <div class="card-body">
                  <div class="mb-3">
                    <i class="fa {{ stat.icon }} fa-3x text-primary"></i>
                  </div>
                  <h2 class="card-title">{{ stat.value }}</h2>
                  <p class="card-text">{{ stat.label }}</p>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- Feature Cards -->
      <div class="row mb-5">
        <div class="col-12">
          <h3 class="text-center mb-4">{{ text_features }}</h3>
          <div class="row">
            {% for feature in b2b_features %}
            <div class="col-lg-6 col-md-6 mb-4">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <div class="feature-icon me-3">
                      <i class="fa {{ feature.icon }} fa-2x text-primary"></i>
                    </div>
                    <h5 class="card-title mb-0">{{ feature.title }}</h5>
                  </div>
                  <p class="card-text">{{ feature.description }}</p>
                </div>
                <div class="card-footer bg-transparent">
                  <a href="{{ feature.url }}" class="btn btn-primary w-100">
                    <i class="fa fa-play-circle"></i> {{ button_explore }}
                  </a>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- Instructions -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fa fa-question-circle"></i> {{ text_instructions }}
              </h5>
            </div>
            <div class="card-body">
              <ol>
                <li>{{ text_instruction_1 }}</li>
                <li>{{ text_instruction_2 }}</li>
                <li>{{ text_instruction_3 }}</li>
                <li>{{ text_instruction_4 }}</li>
              </ol>
            </div>
          </div>
        </div>
      </div>

    </div>
    {{ column_right }}
  </div>
</div>

<style>
.feature-icon {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 123, 255, 0.1);
  border-radius: 50%;
}

.card {
  transition: transform 0.2s ease-in-out;
}

.card:hover {
  transform: translateY(-5px);
}

.display-4 {
  color: #007bff;
}

.lead {
  color: #6c757d;
}
</style>

{{ footer }}